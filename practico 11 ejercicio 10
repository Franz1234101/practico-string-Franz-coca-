#include <iostream>
#include <string>
using namespace std;

string pedirTexto() {
    string texto;
    cout << "Ingrese un texto: ";
    getline(cin, texto);
    return texto;
}

bool esVocal(char c) {
    c = tolower(c);
    return c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u';
}

int contarVocalesJuntas(string texto) {
    int contador = 0;
    for (int i = 0; i < texto.length() - 1; i++) {
        if (esVocal(texto[i]) && esVocal(texto[i + 1])) {
            contador++;
        }
    }
    return contador;
}

void mostrarResultado(int cantidad) {
    cout << cantidad << " vocales juntas" << endl;
}

int main() {
    string texto = pedirTexto();
    int cantidad = contarVocalesJuntas(texto);
    mostrarResultado(cantidad);
    return 0;
}
