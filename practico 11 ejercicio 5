#include <iostream>
#include <string>
using namespace std;

string pedirCadena(string mensaje) {
    string texto;
    cout << mensaje;
    getline(cin, texto);
    return texto;
}

string mezclarCadenas(string c1, string c2) {
    return c1 + c2;
}

void mostrarResultado(string mezcla) {
    cout << mezcla << endl;
}

int main() {
    string cadena1 = pedirCadena("Ingrese la primera cadena: ");
    string cadena2 = pedirCadena("Ingrese la segunda cadena: ");
    string mezcla = mezclarCadenas(cadena1, cadena2);
    mostrarResultado(mezcla);
    return 0;
}
