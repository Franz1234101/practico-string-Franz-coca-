#include <iostream>
#include <string>
#include <cctype>
using namespace std;

string pedirTexto() {
    string texto;
    cout << "Ingrese un texto: ";
    getline(cin, texto);
    return texto;
}

string convertirPrimeraMayuscula(string cadena) {
    bool nuevaPalabra = true;

    for (int i = 0; i < cadena.length(); i++) {
        if (cadena[i] != ' ' && nuevaPalabra) {
            cadena[i] = toupper(cadena[i]);
            nuevaPalabra = false;
        } else if (cadena[i] == ' ') {
            nuevaPalabra = true;
        }
    }

    return cadena;
}

void mostrarResultado(string texto) {
    cout << texto << endl;
}

int main() {
    string texto = pedirTexto();
    string resultado = convertirPrimeraMayuscula(texto);
    mostrarResultado(resultado);
    return 0;
}
